{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src/",
    "outDir": "./dist",
    "paths": {
      "@lang": ["i18n.ts"],
      "@preview": ["templates/preview-data.ts"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
